<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient_bg"
    android:layout_height="match_parent"
   >

  <ImageView
      android:id="@+id/imageView6"
      android:layout_width="102dp"
      android:layout_height="118dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.453"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.05"
      app:srcCompat="@drawable/logo" />

  <EditText
      android:id="@+id/ename"
      android:layout_width="226dp"
      android:layout_height="46dp"
      android:padding="12dp"
      android:background="@drawable/r"
      android:ems="10"
      android:hint="Evenet Name"
android:drawableLeft="@drawable/enter"
      android:drawableStart="@drawable/enter"
      android:inputType="textMultiLine"
      android:textColor="@color/black"
      android:textColorHint="@color/black"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.269" />

  <EditText
      android:id="@+id/edis"
      android:layout_width="305dp"
      android:layout_height="104dp"
      android:ems="10"
      android:hint="Event Detailes"
      android:inputType="textPersonName"
      android:textColor="@color/black"
      android:textColorHint="@color/black"
      android:textStyle="bold"
      android:padding="12dp"
      android:drawableLeft="@drawable/enter"
      android:drawableStart="@drawable/enter"
      android:background="@drawable/r"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.693" />

  <EditText
      android:id="@+id/etime"
      android:layout_width="226dp"
      android:layout_height="46dp"
      android:padding="12dp"
      android:background="@drawable/r"
      android:ems="10"
      android:hint="Event Time"
      android:drawableStart="@drawable/time"
      android:drawableLeft="@drawable/time"
      android:focusable="false"
      android:inputType="textPersonName"
      android:textColor="@color/black"
      android:textColorHint="@color/black"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.551" />

  <EditText
      android:id="@+id/eplace"
      android:layout_width="226dp"
      android:layout_height="46dp"
      android:background="@drawable/r"

      android:ems="10"
      android:hint="Evente  Place"
      android:inputType="textPersonName"
      android:padding="12dp"
      android:textColor="@color/black"
      android:drawableLeft="@drawable/place"
      android:drawableStart="@drawable/place"
      android:textColorHint="@color/black"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.502"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.456" />

  <EditText
      android:id="@+id/edate"
      android:layout_width="226dp"
      android:layout_height="46dp"
      android:padding="12dp"
      android:background="@drawable/r"
      android:ems="10"
      android:focusable="false"
      android:drawableStart="@drawable/datee"
      android:drawableLeft="@drawable/datee"
      android:hint="Event Date"
      android:inputType="textPersonName"
      android:textColor="@color/black"
      android:textColorHint="@color/black"
      android:textStyle="bold"
      android:windowSoftInputMode="stateAlwaysHidden"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.361" />

  <Button
      android:id="@+id/ebtn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/btn"
      android:ems="10"
      android:inputType="textPersonName"
      android:text="UPDATE"
      android:textColor="@color/black"
      android:textColorHint="@color/black"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.9" />

</android.support.constraint.ConstraintLayout>
