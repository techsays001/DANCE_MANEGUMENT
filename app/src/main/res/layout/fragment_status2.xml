<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    >

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="102dp"
        android:layout_height="118dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.446"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.117"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/d_timeperiod"
        android:layout_width="226dp"
        android:layout_height="46dp"
        android:background="@drawable/r"
        android:ems="10"
        android:hint="Techer Experiance"
        android:inputType="textPersonName"
        android:padding="12dp"
        android:drawableLeft="@drawable/enter"
        android:drawableStart="@drawable/enter"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.77" />

    <EditText
        android:id="@+id/stnameee"
        android:layout_width="226dp"
        android:layout_height="46dp"
        android:padding="12dp"
        android:drawableStart="@drawable/enter"
        android:drawableLeft="@drawable/enter"
        android:background="@drawable/r"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Techer Name"

        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.319" />

    <EditText
        android:id="@+id/joindate"
        android:layout_width="226dp"
        android:layout_height="46dp"
        android:padding="12dp"
        android:background="@drawable/r"
        android:ems="10"
        android:hint="Techer Phone Number"
        android:inputType="phone"
        android:maxLength="10"
        android:drawableLeft="@drawable/phone"
        android:drawableStart="@drawable/phone"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.427" />

    <EditText
        android:id="@+id/newph"
        android:layout_width="226dp"
        android:layout_height="46dp"
        android:padding="12dp"
        android:background="@drawable/r"
        android:ems="10"
        android:drawableStart="@drawable/email"
        android:drawableLeft="@drawable/email"
        android:inputType="textEmailAddress"
        android:hint="Techer Email ID"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.534" />

    <Button
        android:id="@+id/d_btn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/btn"
        android:text="UPLOAD"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.901" />

    <Spinner
        android:id="@+id/d_techer"
        android:layout_width="226dp"
        android:layout_height="46dp"
        android:background="@drawable/r"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.674" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="208dp"
        android:layout_height="35dp"
        android:text="Select Techer Dance Type"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.613" />
</android.support.constraint.ConstraintLayout>